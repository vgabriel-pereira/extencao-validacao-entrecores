{
    "manifest_version": 3,
    "name": "Validador de CPF/CNPJ - EntreCores",
    "version": "1.0.0",
    "description": "Extens√£o para validar CPF e CNPJ no site EntreCores.",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["https://entrecores.confere.org.br/*"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://entrecores.confere.org.br/*"],
        "js": ["script.js"],
        "run_at": "document_idle"
      }
    ],

 
  
    
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [
      {
        "resources": ["icons/*"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  